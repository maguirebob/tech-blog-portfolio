# ===========================================
# TECH BLOG PORTFOLIO - ENVIRONMENT TEMPLATE
# ===========================================
# This file shows all possible environment configurations
# Copy the appropriate template file to create your working .env files:
# - cp .env.dev .env (for development)
# - cp .env.test .env.test (for testing)
# - cp .env.production .env.production (for production)

# ===========================================
# DEVELOPMENT ENVIRONMENT
# ===========================================
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/techblog_dev"

# Authentication
JWT_SECRET="development-secret-key-change-this"
JWT_EXPIRES_IN="24h"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="debug"

# Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# TEST ENVIRONMENT
# ===========================================
# Uncomment and configure for test environment
# NODE_ENV=test
# PORT=3001
# DATABASE_URL="postgresql://username:password@localhost:5432/techblog_test"
# JWT_SECRET="test-secret-key"
# JWT_EXPIRES_IN="1h"
# CORS_ORIGIN="http://localhost:3001"
# LOG_LEVEL="error"
# ENABLE_SWAGGER=false
# ENABLE_DEBUG_ROUTES=false

# ===========================================
# PRODUCTION ENVIRONMENT
# ===========================================
# Uncomment and configure for production environment
# NODE_ENV=production
# PORT=80
# DATABASE_URL="postgresql://username:password@prod-host:5432/techblog_prod"
# JWT_SECRET="production-secret-key-from-vault"
# JWT_EXPIRES_IN="24h"
# CORS_ORIGIN="https://techblog.com"
# LOG_LEVEL="info"
# ENABLE_SWAGGER=false
# ENABLE_DEBUG_ROUTES=false
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# ADDITIONAL CONFIGURATION
# ===========================================
# File Upload (if applicable)
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Test Database (for running tests)
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/techblog_test"
